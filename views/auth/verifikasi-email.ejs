<%- include('../includes/top.ejs') %>
    <div class="card shadow-lg border-0 rounded-lg mb-4">
        <div class="card-header justify-content-center"><h3 class="fw-light my-4">Verifikasi Email</h3></div>
        <div class="card-body">
            <div class="mb-3 d-flex justify-content-center">
                <p>Klik tombol di bawah ini untuk verifikasi email anda.</p>    
            </div>
            <div class="d-flex justify-content-center">
                <form action="/verifikasi-email" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input type="hidden" name="token" value="<%= token %>">
                    <button class="btn btn-success" type="submit">Verifikasi Email</button>
                </form>
            </div>
        </div>
    </div>
<%- include('../includes/bottom.ejs') %>